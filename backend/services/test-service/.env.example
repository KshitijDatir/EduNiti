# Server
PORT=3003
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://xenia:xenia_secret@localhost:5432/xenia_tests?schema=public

# Redis (single node for local dev, cluster in production)
REDIS_MODE=standalone
REDIS_URL=redis://localhost:6379
# For cluster mode, comma-separated: host1:port1,host2:port2,host3:port3
REDIS_CLUSTER_NODES=

# JWT (shared secret with auth service)
JWT_SECRET=dev-secret-change-in-production

# Cache TTL (seconds)
CACHE_TEST_TTL=600
CACHE_TEST_META_TTL=1800

# CORS
CORS_ORIGIN=http://localhost:5173
